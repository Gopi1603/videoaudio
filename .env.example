# ── SecureMedia — Environment Variables ─────────────────────────────────
# Copy this file to .env and fill in production values.
# NEVER commit .env to version control.
# ────────────────────────────────────────────────────────────────────────

# Flask
FLASK_ENV=production
SECRET_KEY=CHANGE-ME-generate-with-python-c-import-secrets-secrets.token_hex(64)

# Fernet master key (for AES key wrapping)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_MASTER_KEY=CHANGE-ME-generate-a-valid-fernet-key

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://securemedia:changeme@db:5432/securemedia
POSTGRES_USER=securemedia
POSTGRES_PASSWORD=changeme
POSTGRES_DB=securemedia

# Server
PORT=8000

# Optional: Cloud storage (S3-compatible)
# S3_BUCKET=securemedia-uploads
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Optional: Logging
# LOG_LEVEL=INFO
# SENTRY_DSN=
